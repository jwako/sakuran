  ga('create', 'UA-49859438-1', 'sakuran.herokuapp.com');
  ga('send', 'pageview');

  </script>
</head>
<body style="background-color: rgb(241, 242, 246);">
  <div id="wrap" ng-app="sakuranApp">
    <header>
      <nav class="navbar navbar-default navbar-custom" style="background-color:#EC87C0;">
		  <div class="container">
		    <div class="navbar-header">
		      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
		        <span class="sr-only">Toggle navigation</span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		      </button>
		      <%= link_to 'Sakura Viewing', root_path, class: "navbar-brand" %>
		    </div>
		  </div>
			</nav>
    </header>
    
    <div class="topic">
    <div class="container-fluid">
       
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3 text-center">
          <%= render 'layouts/messages' %>
        </div>
      </div>
      <%= yield %>
    </div>
    </div>
  </div>
    
  <%= render 'layouts/footer' %>

</body>
</html>
