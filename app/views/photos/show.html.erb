<style>
.angular-google-map-container { height: 250px; }
</style>

<div class="row">

<div class="col-xs-8">
	<div class="picture">
	<%= image_tag @tweet.url, class: "img-thumbnail img-responsive" %>
	</div>
</div>

<div class="col-xs-4">

<div class="panel panel-danger">
<div class="panel-heading">Information</div>
<div class="panel-body">
	<p><%= link_to ("@" + @tweet.screen_name), URI.extract(@tweet.text)[0], target: "_blank" %></p>
	<p><%= @tweet.text %></p>
	<p class="text-mute text-right"><%= @tweet.tweet_created_at.strftime("%y/%m/%d") %></p>
</div>
</div>

<div class="panel panel-danger">
<div class="panel-heading">Map</div>
<div class="panel-body">
	<div id="map" ng-controller="PhotoDetailCtrl">
		<google-map 
			center="map.center" 
			zoom="map.zoom" 
			draggable="map.draggable" 
			dragging="map.dragging" 
			events="map.events" 
			control="map.control" 
			refresh="true">
			<marker ng-repeat="marker in map.markers" 
          coords="marker.mcoords"
          icon="marker.icon"
          click="">
      </marker>
		</google-map>
	</div>
</div>
</div>

<div class="text-center">
	<iframe frameborder="0" allowtransparency="true" height="250" width="300" marginheight="0" scrolling="no" src="http://ad.jp.ap.valuecommerce.com/servlet/htmlbanner?sid=3130064&pid=882659046" marginwidth="0"><script language="javascript" src="http://ad.jp.ap.valuecommerce.com/servlet/jsbanner?sid=3130064&pid=882659046"></script><noscript><a href="http://ck.jp.ap.valuecommerce.com/servlet/referral?sid=3130064&pid=882659046" target="_blank" ><img src="http://ad.jp.ap.valuecommerce.com/servlet/gifbanner?sid=3130064&pid=882659046" height="250" width="300" border="0"></a></noscript></iframe>
</div>

</div>

</div>