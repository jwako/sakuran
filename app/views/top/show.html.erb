<div class="row">
<div class="col-xs-12 col-md-6">
	<div id="map" ng-controller="MapCtrl">
		<google-map 
			center="map.center" 
			zoom="map.zoom" 
			draggable="true" 
			dragging="map.dragging" 
			events="map.events" 
			control="map.control" 
			refresh="true">
			<marker ng-repeat="marker in map.markers" 
          coords="marker.mcoords"
          icon="marker.icon"
          click="onMarkerClicked(marker)">
        <window show="marker.showWindow">
          <img ng-src="{{marker.url}}" width="200px;" class="img-responsive" />
        </window>
      </marker>
		</google-map>
	</div>
</div>

<div class="col-xs-12 col-md-6">
	<div id="gallery" ng-controller="GalleryCtrl">
		<div class="row">
			<div class="col-xs-12 col-sm-6 col-md-3" ng-repeat="item in items">
				<img ng-src="{{item.image_url}}" class="img-thumbnail img-space">
		  </div>
	  </div>
	</div>
</div>
</div>